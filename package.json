{
  "name": "jsonrpc-crud-example-ts",
  "version": "1.0.0",
  "description": "JSON-RPC CRUD example using TypeScript, Express, and json-rpc-2.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/server.ts",
    "dev": "ts-node-dev --respawn src/server.ts",
    "start:client": "ts-node src/client.ts",
    "test": "npm run generate-openapi && jest",
    "test:swagger": "jest tests/swagger/openapi.test.ts",
    "generate-openapi": "ts-node src/generate-openapi.ts"
  },
  "keywords": [
    "json-rpc",
    "crud",
    "typescript",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.2",
    "class-validator-jsonschema": "^5.0.2",
    "express": "^4.21.2",
    "json-rpc-2.0": "^1.7.0",
    "reflect-metadata": "^0.2.2",
    "routing-controllers-openapi": "^5.0.0"
  },
  "devDependencies": {
    "@decorators/express": "^3.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.10",
    "@types/swagger-ui-express": "^4.1.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "routing-controllers": "^0.11.2",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "typedi": "^0.10.0",
    "typescript": "^5.5.3"
  }
}
